@model PokerStrategy.Web.ViewModels.Home.HomeIndexModel
<head>
	<link rel="stylesheet" type="text/css" href="~/css/site.css" />

</head>
<body>
	<header>
		<div class="container body-content">
			<div class="row frontPageSplash">
				<div class="col-lg-12">
					<div class="frontPageHeading">
						<h1>Welcome to PokerStrategy</h1>
					</div>
				</div>
			</div>
		</div>
	</header>


	<br />
	<br />
	<div class="row frontPageContent">

		<div class="col-lg-7">
			<h3 id="latestNews" style="padding-bottom:2%">Latest News</h3>
			@foreach (var n in Model.LatestNews)
			{
				<a href="/News/News/@n.Id">
					<div class="card" style="background-color:#282726">
						<div class="row no-gutters">
							<div style="padding: 1%">
								<img src="https://www.pngitem.com/pimgs/m/10-102407_date-and-time-clock-comments-free-date-icon.png" style="filter: invert(100%) sepia(0%) saturate(2%) hue-rotate(337deg) brightness(106%) contrast(101%); color:white; margin-left:10px; margin-right:10px;" height="25" width="25" />
								<span class="text-secondary">@n.CreatedOn.ToString()</span>
							</div>
							<br />
							<div class="col-auto">

								<img class="card bg-dark" src="@n.PictureUrl" style="object-fit: cover; width:100%; height:400px">
							</div>
							<br />
							<div class="col home-card">
								<div class="card-block home-card px-2 ">

									<h2 class="card-title">
										@(n.Title.Length > 30 ?
										n.Title.Substring(0, 30) :
										n.Title)
									</h2>

								</div>
								<br />
								<div>
									<p style="font-size: 100%;" class="card-text">@Html.Raw(n.ShortContentForLatestNews)</p>
								</div>
							</div>
						</div>
					</div>
				</a>
				<br />
			}
		</div>
		<br />
		<div class="col-lg-5">



			<h3 id="latestPosts" style="padding-bottom:1%">Latest Discussions</h3>
			<div class="table" id="latestPostsTable" style="margin-top:15px;">

				@foreach (var t in Model.LatestThreads)
				{
					<div style="margin:5px; background-color:#282726;   display: flex;justify-content: center;align-items: center;height: 30px;">
						<a asp-controller="ForumThread" asp-action="Thread" asp-route-id="@t.Id">
							<div class="postTitle">
								@(t.Title.Length > 30 ? t.Title.Substring(0,30) : t.Title)
							</div>
						</a>

					</div>
				}

			</div>
			<br />

			<h3 id="latestNews">Latest Videos</h3> <!----------------------TO DO, CHANGE TO VIDEOS-->
			@foreach (var t in Model.LatestVideos)
			{
				<a href="/Video/Video/@t.Id">
					<div>
						<div class="row no-gutters">

							<div class="col-auto">
								<img src="@t.VideoThumbnailUrl" class="img-fluid" alt="">
							</div>
							@{string a = t.VideoThumbnailUrl;
							}
							<div class="col">
								<div class="card-block home-card px-2" style="background-color:#282726">

									<h4 class="card-title" style="padding-top:4%">@t.ShortenedTitle</h4>
									<p class="card-text">@t.ShortenedDescription</p>

								</div>
							</div>
						</div>
					</div>
				</a>
				<br />
			}

		</div>
	</div>





</body>



