@model PokerStrategy.Web.ViewModels.Home.HomeIndexModel
<head>
	<link rel="stylesheet" type="text/css" href="~/css/site.css" />

</head>

<header>
	<div class="container body-content">
		<div class="row frontPageSplash">
			<div class="col-lg-12">
				<div class="frontPageHeading">
					<h1>Welcome to PokerStrategy</h1>
				</div>
			</div>
		</div>
	</div>
</header>


<br />
<br />
<div class="row frontPageContent">

	<div class="col-lg-8">
		<h3 id="latestNews">Latest News</h3>
		@foreach (var n in Model.LatestNews)
		{
			<a href="/News/ById/@n.Id">
				<div class="card bg-dark">
					<div class="row no-gutters">
						<div class="col-auto">
							<img src=@n.PictureUrl class="img-fluid" alt="">
						</div>
						<div class="col home-card">
							<div class="card-block home-card px-2 bg-dark">

								<h2 class="card-title">
									@(n.Title.Length > 30 ?
		n.Title.Substring(0, 30) :
		n.Title)
								</h2>

							</div>
							@{
								string content = Html.Raw(n.Content).ToString();
								string trimmedContent = content.Length > 200 ? content.Substring(0,200) : content;
							}
							<p style="background-color:black; font-size:100%;" class="card-text">@Html.Raw(trimmedContent)</p>
						</div>
					</div>
				</div>
			</a>
			<br />
		}
	</div>
	<br />
	<div class="col-lg-4">



		<h3 id="latestPosts">Latest Discussions</h3>
		<table class="table bg-dark border-left border-bottom border-top border-right" id="latestPostsTable">
			<tbody>
				@foreach (var t in Model.LatestThreads)
				{
					<tr>
						<td>
							<a asp-controller="ForumThread" asp-action="Thread" asp-route-id="@t.Id">
								<div class="postTitle">
									@(t.Title.Length > 30 ? t.Title.Substring(0,30) : t.Title)
								</div>
							</a>
						</td>
					</tr>
				}
			</tbody>
		</table>
		<br />

		<h3 id="latestNews">Latest Videos</h3> <!----------------------TO DO, CHANGE TO VIDEOS-->
		@foreach (var t in Model.LatestVideos)
		{
			<a href="/Video/ById/@t.Id">
				<div class="card bg-dark border-info">
					<div class="row no-gutters">

						<div class="col-auto">
							<img src="@t.VideoThumbnailUrl" class="img-fluid" alt="">
						</div>
						@{string a = t.VideoThumbnailUrl;
						}
						<div class="col">
							<div class="card-block home-card px-2">

								<h4 class="card-title">@t.ShortenedTitle</h4>
								<p class="card-text">@t.ShortenedDescription</p>

							</div>
						</div>
					</div>
				</div>
			</a>
			<br />
		}

	</div>
</div>









