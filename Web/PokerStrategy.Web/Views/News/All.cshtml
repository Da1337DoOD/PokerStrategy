@model PokerStrategy.Web.ViewModels.News.NewsListingViewModel

<head>
	<link rel="stylesheet" type="text/css" href="~/css/site.css" />
</head>

<li class="nav-item">
	<a class="nav-link" style="color:seashell" border-radius:10%" asp-controller="AdminNews" asp-action="Create" asp-area="Administration">Add News</a>
</li>
<body>
	@{ int count = 0; }
	@foreach (var news in Model.News)
	{
		@if (count < 2)
		{
			<div style="width:385px; float:left">
				<a asp-controller="News" asp-action="ById" asp-route-id="@news.Id">
					<div class="card" style="width: 20.69rem; background-color:#282726">
						<img class="card-img-top" src="@news.PictureUrl" alt="Card image cap" style="width:329px; height:329px">
						<div class="card-body">
							<strong><a class="card-title" style="color:seashell; text-align:center" asp-controller="News" asp-action="IncrementViewsById" asp-route-id="@news.Id">@news.Title</a></strong>
							<p class="card-text" style="color:seashell">@news.ShortContent</p>

							<img src="https://cdn2.iconfinder.com/data/icons/picol-vector/32/view-512.png" style="margin-left:5px" height="15" width="25" />
							<span align="right" class="text-secondary" style="font-size:20px">@news.Views</span>
						</div>
					</div>
				</a>
			</div> count++;
		}
		else if (count == 2)
		{
			<a asp-controller="News" asp-action="IncrementViewsById" asp-route-id="@news.Id" class="btn btn-primary">
				<div class="card" style="width: 20.69rem; background-color:#282726">
					<img class="card-img-top" src="@news.PictureUrl" alt="Card image cap" style="width:329px; height:329px">
					<div class="card-body">
						<strong><a class="card-title" style="color:seashell; text-align:center" asp-controller="News" asp-action="IncrementViewsById" asp-route-id="@news.Id">@news.Title</a></strong>>
						<p class="card-text" style="color:seashell">@news.ShortContent</p>

						<img src="https://cdn2.iconfinder.com/data/icons/picol-vector/32/view-512.png" style="margin-left:5px" height="25" width="25" />
						<span align="right" class="text-secondary" style="font-size:20px">@news.Views</span>
					</div>
				</div>
			</a>
			count++;
		}
		else
		{
			<br />
			<div class="card flex-md-row mb-4 box-shadow h-md-250" style=" background-color:#1b1b18; -webkit-box-shadow: 10px 10px 55px 0px rgba(0,0,0,0.34);
        -moz-box-shadow: 10px 10px 55px 0px rgba(0,0,0,0.34);
        box-shadow: 10px 10px 55px 0px rgba(0,0,0,0.34);">
				<img class="card-img-right flex-auto d-none d-md-block" alt="Thumbnail [200x250]" style="width: 250px; height: 250px;" src="@news.PictureUrl" data-holder-rendered="true">
				<a asp-controller="News" asp-action="ById" asp-route-id="@news.Id">
					<div class="card-body d-flex flex-column align-items-start">
						<div style="display: inline">
							<h3 class="mb-0" width="90%">
								<strong><a style="color:seashell" asp-controller="News" asp-action="IncrementViewsById" asp-route-id="@news.Id">@news.Title</a></strong>
								<img src="https://cdn2.iconfinder.com/data/icons/picol-vector/32/view-512.png" style="margin-left:5px" height="25" width="25" />
								<span align="right" class="text-secondary" style="font-size:20px">@news.Views</span>
							</h3>
						</div>
						<div class="mb-1 text-muted">@news.CreatedOnAsString</div>
						<p class="card-text mb-auto">@news.ShortContent</p>

					</div>
				</a>
			</div>
			<br />
			count = 0;
		}}
</body>