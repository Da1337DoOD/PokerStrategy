@model PokerStrategy.Web.ViewModels.Forum.CategoryModel

<h1>Discussion Board</h1>
<h1>@Model.Category.Title</h1>

<span id="headingBtn"><a asp-controller="ForumThread" asp-action="Create" asp-route-id="@Model.Category.Id">Create</a></span>

@if (Model.Threads.Any())
{
	<table class="table table-bordered table-hover">
		<tbody>
			@foreach (var thread in Model.Threads)
			{
				<tr>
					<td>
						<a asp-controller="ForumThread"
						   asp-action="Thread"
						   asp-route-id="@thread.Id">
							@thread.Title
						</a>
					</td>
					<td>
						@thread.AuthorName
					</td>
					<td>
						@thread.AuthorId
					</td>
					<td>
						@thread.DateCreated
					</td>
					<td>
						@thread.RepliesCount
					</td>
				</tr>
			}
		</tbody>
	</table>
}
else
{
	<h2>No threads in this Board yet.</h2>
}