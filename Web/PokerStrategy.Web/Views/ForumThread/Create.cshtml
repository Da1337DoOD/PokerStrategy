<form asp-action="AddThread" method="post" id="addThreadForm">
	<div class="form-group">
		<label asp-for="Title"></label>
		<input asp-for="Title" class="form-control" />
	</div>
	<div asp-validation-summary="All" class="text-danger"></div>
	<div class="form-group">
		<label asp-for="Content">Thread Content</label>
		<textarea asp-for="Content" rows="20" class="form-control" placeholder="Write your message here."></textarea>
		<span asp-validation-for="Content" class="text-danger"></span>
	</div>
	<button type="submit" id="registerBtn" class="btn btn-submitPost btn-newBack">Create</button>

	<input asp-for="CategoryId" type="hidden" />
</form>