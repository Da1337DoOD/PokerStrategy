@model PokerStrategy.Web.ViewModels.News.NewsCreateInputModel
	<head>
		<link rel="stylesheet" type="text/css" href="~/css/site.css" />
	</head>

	<script src='https://cdn.tiny.cloud/1/t8478o48f5812yo147q590mh37ekrq9u2t25fbhc0aletbq1/tinymce/5/tinymce.min.js' referrerpolicy="origin">
	</script>
	<script>
		tinymce.init({
			selector: 'textarea',
			plugins: 'a11ychecker advcode casechange formatpainter linkchecker autolink lists checklist media mediaembed pageembed permanentpen powerpaste table advtable tinycomments tinymcespellchecker',
			toolbar: 'a11ycheck addcomment showcomments casechange checklist code formatpainter pageembed permanentpen table',
			toolbar_mode: 'floating',
			tinycomments_mode: 'embedded',
			tinycomments_author: 'Author name',
		});
	</script>


	<form method="post" asp-action="CreateNews">
		<div>
			<div class="col-lg-8">
				<label asp-for="Title">Title</label>
				<input asp-for="Title" style="color:black" class="form-control" />
				<span asp-validation-for="Title" class="text-danger"></span>
			</div>
			<br />
				<div class="col-lg-4 float-left">
					<label asp-for="Url">Image Url</label>
					<input asp-for="Url" style="color:black" class="form-control" />
					<span asp-validation-for="Url" class="text-danger"></span>
				</div>
				<div class="col-lg-8 float-right">
					<label asp-for="Content">Content</label>
					<textarea asp-for="Content" class="form-control"></textarea>
					<span asp-validation-for="Content" class="text-danger"></span>
				</div>
				<div class="col-lg-4 float-left" >
					<label asp-for="Category">Category</label>
					<select class="form-control" style="color:black" asp-for="Category">
						<option value="Lifestyle">Lifestyle</option>
						<option value="PokerRooms">Poker Rooms</option>
						<option value="Promotions">Promotions</option>
					</select>
					<span asp-validation-for="Category" class="text-danger"></span>
				</div>
				<hr />
				<input type="submit" class="btn btn-primary" style="margin-left: 145px; margin-top: 28px;" value="Submit" />
			</div>
</form>