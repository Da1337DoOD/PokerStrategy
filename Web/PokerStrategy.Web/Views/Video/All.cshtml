@model PokerStrategy.Web.ViewModels.Videos.VideoListingViewModel
@using PokerStrategy.Data.Models
@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<head>
	<link rel="stylesheet" type="text/css" href="~/css/site.css" />
</head>

<body>
	@foreach (var vid in Model.Videos)
	{
		<div class="main-card" style="padding-left:30px; width:auto; height:440px; float:left">
			<a asp-controller="Video" asp-action="IncrementViewsById" asp-route-id="@vid.Id">
				<div class="card" style="width: 20.69rem; background-color:#282726">
					<img class="card" src="@vid.VideoThumbnailUrl" alt="Card image cap" style="width:auto; height:auto">
					<div class="card-body">
						<strong class="card-title">
							@vid.ShortenedTitle
						</strong>
						<p class="card-text" style="color:seashell">@vid.ShortenedDescription</p>

						<img src="https://cdn2.iconfinder.com/data/icons/picol-vector/32/view-512.png" style="filter: invert(100%) sepia(0%) saturate(2%) hue-rotate(337deg) brightness(106%) contrast(101%); margin-left:10px; margin-right:10px;" height="25" width="25" />
						<span align="right" class="text-secondary" style="font-size:20px">@vid.Views</span>
					</div>
				</div>
			</a>
		</div>
	}
</body>